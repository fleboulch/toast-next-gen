<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Etudiant.
    -->
    <changeSet id="20170126112524-1" author="jhipster">
        <createTable tableName="etudiant">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="prenom" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="mail" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="sexe" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="num_etudiant" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="etudiant_diplome">
            <column name="diplomes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="etudiants_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="etudiants_id, diplomes_id" tableName="etudiant_diplome"/>
        
    </changeSet>
</databaseChangeLog>
